<% if @event.errors.any? %>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<div class="form-group">
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
</div>